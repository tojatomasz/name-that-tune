{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm run build",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "spicetify apply",
            "type": "shell",
            "command": "spicetify",
            "args": ["apply"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "spicetify enable-devtools",
            "type": "shell",
            "command": "spicetify",
            "args": ["enable-devtools"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        
        {
            "label": "Composite Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "npm run build",
                "spicetify apply",
                "spicetify enable-devtools"
            ]
        }
    ]
}
